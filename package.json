{
  "name": "proshop",
  "version": "1.0.0",
  "type": "module",
  "description": "An eCommerce application built using MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "database:import": "node backend/seeder",
    "database:destroy": "node backend/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdanwarjamal/proshop.git"
  },
  "keywords": [
    "MERN",
    "React",
    "Node.js",
    "eCommerce",
    "Full",
    "Stack"
  ],
  "author": "Md Anwar Jamal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mdanwarjamal/proshop/issues"
  },
  "homepage": "https://github.com/mdanwarjamal/proshop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mongoose": "^6.2.3"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
}
